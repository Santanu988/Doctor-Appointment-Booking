                        </div>
                      </div>
                    </div>
                  </section>
                  
                  <section class="appoinment section">
                    <div class="container">
                      <div class="row">
                        
                  
                        <div class="col-lg-12">
                             <div class="appoinment-wrap mt-5 mt-lg-0 pl-lg-5" style="display: flex; justify-content: center;">
                              <div class="wrapper">
                                <h2>Change Password</h2>
                                <%if(success_msg[0]){%><h5 class="alert alert-success"> <%=success_msg%></h5><%}%>
                                <%if(error_msg[0]){%> <h5 class="alert alert-danger"><%=error_msg%></h5><%}%>
                                <form action="/changepassword" method="post">
                                  <div class="input-box">
                                    <input type="email" value="<%=user.email%>" name="email"  placeholder="Enter your email" readonly required>
                                  </div>                
                                  <div class="input-box">
                                    <input type="password" placeholder="Password" name="password" required>
                                  </div>              
                                  <div class="input-box">
                                    <input type="password" name="confirm_password" placeholder="Comfirm Password" required>
                                  </div>              
                                  <div class="input-box button">
                                    <input type="Submit" value="Login">
                                  </div>
