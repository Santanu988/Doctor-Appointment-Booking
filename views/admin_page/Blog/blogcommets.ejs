<body id="page-top">
 
    <!-- topbar include -->

        <!-- Page Wrapper -->
         <!-- stdebar include -->
        <%-include('../../layout/adminlayout/admin_sidebar.ejs')%>
    
            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">
                <!-- Main Content -->
                <div id="content">
                    <!-- navbae include -->
                    <%if(success_msg[0]){%><h5 class="alert alert-success"> <%=success_msg%></h5><%}%>
                    <%if(error_msg[0]){%> <h5 class="alert alert-danger"><%=error_msg%></h5><%}%>
                    <!-- navbar include -->
                    <%-include('../../layout/adminlayout/admin_navbar.ejs')%>
                    <hr>
                        <!-- Begin Page Content -->
                 <!-- Begin Page Content -->
                 <div class="container-fluid">
                    
                        <h1 class="h3 mb-2 text-gray-800 mb-4">Show All Blog</h1>
                        <div style="display: flex; justify-content: flex-end;">
                                        <a href="/admin/addblog" style="padding: 5px; background-color: rgb(21, 58, 205); border-radius: 5px ; margin-left: 20px;margin-bottom: 10px; color: antiquewhite;">Add Blog</a>
                                    </div>
                       
                        
                 
                    <!-- Page Heading -->
                     <div style="display: flex; justify-content: space-between;">
                        
                       
                       
                     </div>
                   
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4 mt-4">

                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%"
                                    cellspacing="0">
                                    <thead>
                                        <tr>
                                          
                                            <th>SL.</th>
                                            <th>Image</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Blog Catgory</th>
                                            <th>Comment</th>
                                            <th>Comment Date </th>
                                            <th>Action</th>
                                            
                                               
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            
                                            <th>SL.</th>
                                            <th>Image</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Blog Catgory</th>
                                            <th>Comment</th>
                                            <th>Comment Date </th>
                                            <th>Action</th>
                                            
                                                  
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                    
                                    
                                      <%data.forEach((da,i)=>{%>
                                            <!-- Code to be executed if the condition is true -->
                                            <tr>
                                                <td><%=i+1%></td>
                                                <td><img src="/<%=da.image%>" alt="..." height="60px" width="80px" style="border-radius: 10px;"></td>
                                                <td><%=da.user%></td>
                                                <td><%=da.useremail%></td>
                                                <td><%=da.blog%></td>
                                                <td><%=da.comment%></td>
                                                <td><%=new Date(da.commentdate).toLocaleDateString()%></td>
                                                <td> 
                                                    <%if(!(da.commentisdelete)){%>
                                                    <button
                                                    style="background-color: rgb(128, 105, 0); border-radius: 5px; border: none; display: flex; justify-content: center; align-items: center;"><a
                                                        href="/admin/delete/comment/<%=da.commentid%>"
                                                        class="text-white p-1 " style="text-decoration: none;">Delete<br>Comment</a></button> 
                                                        <%}else{%>
                                                            <%if(!(da.userisdellete)){%>
                                                                <button
                                                                style="background-color: rgb(128, 19, 0); border-radius: 5px; border: none; display: flex; justify-content: center; align-items: center;"><a
                                                                    href="/admin/delete/useraccount/<%=da.userid%>"
                                                                    class="text-white p-1 " style="text-decoration: none;">Delete<br>Account</a></button> 
                                                                <%}else{%>
                                                                    <button
                                                                    style="background-color: rgb(0, 30, 128); border-radius: 5px; border: none; display: flex; justify-content: center; align-items: center;"><a
                                                                        href="/admin/restore/comment/<%=da.userid%>"
                                                                        class="text-white p-1 " style="text-decoration: none;">Restore<br>Account</a></button> 
                                                                    <%}%>
                                                            <%}%>
                                                    </td>
                                                
                                            </tr>
                                            <%})%>        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

        </div>
