        <!-- Chart Scripts -->
        <script>
         const monthlyAppointments = <%= monthlyAppointments %>;
const deptLabels = <%- deptLabels %>;
const deptCounts = <%- deptCounts %>;

const ctxArea = document.getElementById("appointmentsChart").getContext('2d');
new Chart(ctxArea, {
    type: 'line',
    data: {
        labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"],
        datasets: [{
            label: "Appointments",
            data: monthlyAppointments,
            backgroundColor: "rgba(78, 115, 223, 0.2)",
            borderColor: "rgba(78, 115, 223, 1)",
            borderWidth: 2,
            tension: 0.4,
            fill: true,
            pointBackgroundColor: "rgba(78, 115, 223, 1)"
        }]
    },
    options: {
        maintainAspectRatio: false,
        responsive: true,
        scales: {
            y: {
                beginAtZero: true,
                ticks: { stepSize: 1 }
            }
        }
    }
});

const ctxPie = document.getElementById("appointmentsPieChart").getContext('2d');
new Chart(ctxPie, {
    type: 'doughnut',
    data: {
        labels: deptLabels,
        datasets: [{
            data: deptCounts,
            backgroundColor: ["#4e73df", "#1cc88a", "#36b9cc", "#f6c23e", "#e74a3b", "#20c997", "#6f42c1", "#fd7e14", "#17a2b8", "#6610f2"],
            hoverBorderColor: "rgba(234, 236, 244, 1)"
        }]
    },
    options: {
        maintainAspectRatio: false,
        plugins: {
            legend: { position: 'bottom' }
        }
    }
});

        </script>


