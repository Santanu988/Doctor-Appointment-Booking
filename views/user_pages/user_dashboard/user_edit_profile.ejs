                    <!-- Begin Page Content -->
                    <div class="container-fluid" >
                     
                    
                      <div style="display: flex; justify-content: center; align-items: center; margin-top: 40px; margin-bottom: 40px;">
                        <div style="width: 700px; box-shadow: 1px 1px 2px 2px rgb(235, 231, 231); padding: 20px; ">
                          <form action="/dashboard/profile/datastore" method="post">
                            <div class="row">
                              <div class="col-lg-12" style="margin: 0px;">
                                <h3 style="">Update Profile</h3>
                              </div>
                              <div class="col-lg-6" >
                                <div class="form-group" >
                                  <label for="exampleInputEmail1">Full Name</label>
                                  <input type="text" class="form-control" name="name" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Your Name" value="<%=user.name%>" required>
                                </div>
                              </div>
                              <div class="col-lg-6">
                                <div class="form-group" >
                                  <label for="exampleInputEmail2">Email</label>
                                  <input type="email" class="form-control" name="email" id="exampleInputEmail2" aria-describedby="emailHelp" placeholder="Enter Your Email" value="<%=user.email%>" readonly>
                                </div>
                              </div>                                                        
                              <div class="col-lg-6">
                                <div class="form-group" >
                                  <label for="exampleInputEmail3">Phone</label>
                                  <input type="number" class="form-control" name="phone" id="exampleInputEmail3" aria-describedby="emailHelp" placeholder="Enter Your Phone" value="<%=user.phone%>" required>
                                </div>
                              </div>                                                        
                              <div class="col-lg-6">
                                <div class="form-group" >
                                  <label for="exampleInputEmail4">Alternative Phone</label>
                                  <input type="number" class="form-control" name="altphone" value="<%=user.altphone%>" id="exampleInputEmail4" aria-describedby="emailHelp" placeholder="Enter Your Alternative Phone No"  required>
                                </div>
                              </div>                                                        
                              <div class="col-lg-6">
                                <div class="form-group" >
                                  <label for="exampleInputEmail5">Date Of Birth</label>
                                  <input type="date" class="form-control"  name="dateofbirth" value="<%=user.dateofbirth%>" id="exampleInputEmail5" aria-describedby="emailHelp" placeholder="Enter Your Email"  required>
                                </div>
                              </div>                                                        
                              <div class="col-lg-6">
                                <div class="form-group" >
                                  <label for="exampleInputEmail6">Blood Group</label>
                                  <div class="form-group">
                                    <select class="form-control" name="blood_group"
                                        required id="exampleInputEmail6">
                                        <option value="">Blood Group</option>
                                        <option value="A+" <%if(user.blood_group=='A+'){%>selected<%}else{%><%}%>>A+</option>
                                        <option value="A-"<%if(user.blood_group=='A-'){%>selected<%}else{%><%}%>>A-</option>
                                        <option value="B+"<%if(user.blood_group=='B+'){%>selected<%}else{%><%}%>>B+</option>
                                        <option value="B-"<%if(user.blood_group=='B-'){%>selected<%}else{%><%}%>>B-</option>
                                        <option value="O-"<%if(user.blood_group=='O+'){%>selected<%}else{%><%}%>>O-</option>
                                        <option value="O+"<%if(user.blood_group=='O-'){%>selected<%}else{%><%}%>>O+</option>
                                        <option value="AB-"<%if(user.blood_group=='AB+'){%>selected<%}else{%><%}%>>O-</option>
                                        <option value="AB+"<%if(user.blood_group=='AB-'){%>selected<%}else{%><%}%>>O+</option>
                                    </select>
                                </div>
                                </div>
                              </div>                                                        
                              <div class="col-lg-6">
                                <div class="form-group" >
                                  <label for="exampleInputEmail7">Gender </label>
                                  <select class="form-control" name="gender" id="exampleInputEmail7"
                                  required >
                                  <option value="">Gendar</option>
                                  <option value="Male"<%if(user.gender=='Male'){%>selected<%}else{%><%}%>>Male</option>
                                  <option value="Female"<%if(user.gender=='Female'){%>selected<%}else{%><%}%>>Female</option>
                                  <option value="Other"<%if(user.gender=='Other'){%>selected<%}else{%><%}%>>Other</option>
                              </select>
                                </div>
                              </div>                                                        
                              <div class="col-lg-6">
                                <div class="form-group" >
                                  <label for="exampleInputEmail7">Marital Status</label>
                                  <select class="form-control" name="maritalstatus" id="exampleInputEmail7"
                                  required >
                                  <option value="">Marital Status</option>
                                  <option value="Married"<%if(user.gender=='Married'){%>selected<%}else{%><%}%>>Married</option>
                                  <option value="Unmarried"<%if(user.gender=='Unmarried'){%>selected<%}else{%><%}%>>Unmarried</option>                                  
                              </select>
                                </div>
                              </div>                                                        
                              <div class="col-lg-6">
                                <div class="form-group" >
                                  <label for="exampleInputEmail7">Physical Disability</label>
                                  <select class="form-control" name="physical_disability" id="exampleInputEmail7"
                                  required >
                                  <option value="">Physical Disability</option>
                                  <option value="Yes"<%if(user.gender=='Yes'){%>selected<%}else{%><%}%>>Yes</option>
                                  <option value="No"<%if(user.gender=='No'){%>selected<%}else{%><%}%>>No</option>
                              </select>
                                </div>
                              </div>                                                        
                              <div class="col-lg-6">
                                <div class="form-group" >
                                  <label for="exampleInputEmail8">Street</label>
                                  <input type="text" class="form-control" name="street"  id="exampleInputEmail8" aria-describedby="emailHelp" placeholder="Enter Your Street"  required>
                                </div>
                              </div>                                                        
                              <div class="col-lg-6">
                                <div class="form-group" style="margin-bottom: 0px;">
                                  <label for="exampleInputEmail1"></label>
                                  <input type="text" class="form-control"  id="exampleInputEmail9"  name="city" aria-describedby="emailHelp" placeholder="Enter Your City"  required>
                                </div>
                              </div>                                                        
                              <div class="col-lg-6">
                                <div class="form-group" style="margin-bottom: 0px;">
                                  <label for="exampleInputEmail1"></label>
                                  <input type="text" class="form-control"  id="exampleInputEmail9"  aria-describedby="emailHelp" name="state" placeholder="Enter Your State"  required>
                                </div>
                              </div>                                                        
                              <div class="col-lg-6">
                                <div class="form-group" style="margin-bottom: 0px;">
                                  <label for="exampleInputEmail10"></label>
                                  <input type="text" class="form-control" id="exampleInputEmail10" aria-describedby="emailHelp" name="zip" placeholder="Enter Your PIN"  required>
                                </div>
                              </div>                                                        
                              <div class="col-lg-6">
                                <div class="form-group" style="margin-bottom: 0px;">
                                  <label for="exampleInputEmail11"></label>
                                  <input type="text" class="form-control" id="exampleInputEmail11" aria-describedby="emailHelp" name="country" placeholder="Enter Your Country"  required>
                                </div>
                              </div>                                                        
                              <div class="col-lg-12">
                                <div class="form-group" style="margin-bottom: 0px;">
                                  <label for="exampleInputEmail12"></label>
                                  <input type="submit" class="form-control" style="background-color: #0e4bf1; color: rgb(247, 241, 241);" id="exampleInputEmail12" aria-describedby="emailHelp"  placeholder="Submit">
                                </div>
                              </div>                                                        
                            </div>                                                                                                                                                                                                       
                          </form>
                        </div>
                      </div>                    
